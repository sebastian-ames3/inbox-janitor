# Inbox Janitor - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it's gitignored)

# ====================
# Application Settings
# ====================
APP_NAME=Inbox Janitor
APP_URL=http://localhost:8000
ENVIRONMENT=development
DEBUG=true

# ====================
# Database
# ====================
# Local development (adjust for your setup)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/inbox_janitor

# Railway auto-sets this in production - leave empty for Railway
# DATABASE_URL=

# ====================
# Security & Encryption
# ====================
# Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-generate-with-command-above

# Generate SESSION_SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Use a DIFFERENT key from SECRET_KEY for additional security
SESSION_SECRET_KEY=your-session-secret-key-here-generate-with-command-above

# Generate ENCRYPTION_KEY: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here-generate-with-command-above

# ====================
# OAuth - Google
# ====================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ====================
# OAuth - Microsoft 365 (V1 - Optional)
# ====================
# Get from: https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps
# MICROSOFT_CLIENT_ID=
# MICROSOFT_CLIENT_SECRET=
# MICROSOFT_REDIRECT_URI=

# ====================
# OpenAI API
# ====================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ====================
# Postmark Email
# ====================
# Get from: https://account.postmarkapp.com/servers
POSTMARK_API_KEY=your-postmark-server-token
POSTMARK_FROM_EMAIL=noreply@inboxjanitor.com

# ====================
# Redis
# ====================
# Local development
REDIS_URL=redis://localhost:6379/0

# Railway auto-sets this in production - leave empty for Railway
# REDIS_URL=

# ====================
# Celery (Auto-configured from Redis)
# ====================
# Leave empty - auto-set from REDIS_URL in config.py
# CELERY_BROKER_URL=
# CELERY_RESULT_BACKEND=

# ====================
# Google Cloud Pub/Sub (Week 2+)
# ====================
# For Gmail webhook push notifications
# GOOGLE_PROJECT_ID=
# GOOGLE_PUBSUB_TOPIC=
# GOOGLE_PUBSUB_SUBSCRIPTION=

# ====================
# Stripe (Week 6+)
# ====================
# Get from: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# ====================
# Sentry Monitoring (Optional)
# ====================
# Get from: https://sentry.io/settings/projects/
# SENTRY_DSN=

# ====================
# Rate Limiting & Classification
# ====================
RATE_LIMIT_EMAILS_PER_MIN=10
DEFAULT_AUTO_THRESHOLD=0.85
DEFAULT_REVIEW_THRESHOLD=0.55
